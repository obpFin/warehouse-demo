{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"lib": [
			"DOM",
			"es2020",
		],
		"outDir": "./dist",
		"moduleResolution": "node",
    "esModuleInterop": true,
		"sourceRoot": "./src",
		"types": [
			"node"
		],
		"jsx": "react-jsx",
		"declaration": true,
		"removeComments": false,
		"inlineSources": true,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		// "noImplicitReturns": true,
		// "noImplicitThis": true,
		// "noImplicitAny": true,
		"importHelpers": true,
		// "strictNullChecks": true,
		// "suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
	},
	"include": [
		"server/**/*"
	],
	"exclude": [
		"test/*",
		"dist/*",
		"node_modules/*"
	]
}